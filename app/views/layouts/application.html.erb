<!DOCTYPE html>
<html>
<head>
  <title>TaskBoard</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">


  <nav class="navbar navbar-default" role="navigation">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "<b>Home</b>".html_safe, root_url, :class => 'navbar-brand' %>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.email %>
                  <b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <li><%= link_to '<i class="glyphicon glyphicon-off"></i> Sign Out'.html_safe, destroy_user_session_url, :method => :delete %></li>
                  <li><%= link_to "My Boards", boards_url %></li>
                  <li><%= link_to '<i class="glyphicon glyphicon-plus-sign"></i> Add Board'.html_safe, new_board_url %></li>
                  <li><%= link_to '<i class="glyphicon glyphicon-cog"></i> Settings'.html_safe, edit_user_registration_url %></li>
                </ul>
              </li>
          <% else %>
              <li><%= link_to "Sign In", new_user_session_url %></li>
              <li><%= link_to "Sign Up", new_user_registration_url %></li>
          <% end %>
        </ul>
      </div>
      <!-- /.navbar-collapse -->
    </div>
    <!-- /.container-fluid -->
  </nav>

  <%= flash_messages %>
  <%= yield %>

</div>
</body>
</html>
