<h1>New Board</h1>

<%= form_for @board, {:url => boards_url, :html => {:method => :post}} do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %> <br /><br />
    <%= f.label :description %>
    <%= f.text_area :description, :style => "width: 300px;height: 100px;" %> <br /><br />
    <%= f.submit  %>
<% end %>