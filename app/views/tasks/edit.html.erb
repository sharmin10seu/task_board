<h1>Edit Task</h1><br>
<%= form_for @task, {:url => task_url(@task), :html => {:method => :put}} do |f|  %>
    <%= f.label :name %>
    <%= f.text_field :name %> <br /><br />
    <%= f.label :description %>
    <%= f.text_area :description %> <br /><br />

    <%= f.label :status %>
    <%= f.collection_select :status, [['TODO','TODO'],['DOING','DOING'],['DONE','DONE']], :first, :last, {}, {} %><br /><br />
    <%= f.file_field :doc %> <br/><br/>
    <%= f.submit  %>
<% end %>